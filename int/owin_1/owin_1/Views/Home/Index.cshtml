    <ul class="nav nav-pills nav-justified nav-pills-danger">
        <li class="active tag"><a href="#" data-toggle="tab" id="featured">Featured</a></li>
        <li class="tag"><a href="#" data-toggle="tab" id="music">Music</a></li>
        <li class="tag"><a href="#" data-toggle="tab" id="sports">Sports</a></li>
        <li class="tag"><a href="#" data-toggle="tab" id="entertainment">Entertainment</a></li>
        <li class="tag"><a href="#" data-toggle="tab" id="technology">Technology</a></li>
    </ul>
    <div class="text-center" style="align-content:center; margin-top:25px">
        <div id="getpostbytagdiv"></div>
    </div>
</nav>

