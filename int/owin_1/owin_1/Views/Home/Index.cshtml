                InsertionMode = InsertionMode.Replace, // <-- Replace the content of DOM element
                HttpMethod = "GET" // <-- HTTP method
            }                                              // htmlAttributes
        )
        </li>
        <li>
            @Ajax.ActionLink(
            "Entertainment",                                          // linkText
            "GetByTag",                                              // actionName
            "Home",                                                 // controllerName
            new
            {                                                     // routeValues
